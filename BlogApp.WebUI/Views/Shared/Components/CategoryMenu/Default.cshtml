@model IEnumerable<Category>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="list-group">
    @foreach (var item in Model)
    {
        <a asp-controller="Blog" asp-action="Index" asp-route-id="@item.CategoryId" 
           class="list-group-item list-group-item-action @(ViewBag.SelectedCategory==item.CategoryId.ToString() ? "active" : "")" aria-current="true">
            @item.Name
        </a>
    }
</div>