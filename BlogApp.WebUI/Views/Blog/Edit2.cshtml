@model Blog
@{
    ViewData["Title"] = "Edit2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{ 
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body")
    </script>
}
<div class="container">
    <h2>Blog Düzenle</h2>
    <hr />
    <form asp-controller="Blog" asp-action="Edit2" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="BlogId" />
        <input type="hidden" asp-for="Image" />
        <div class="form-group">
            <label asp-for="Title">Başlık</label>
            <input asp-for="Title" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Description">Açıklama</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Resim</label>
            <img src="~/img/@Model.Image" width="120"/>
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="isApproved" class="form-check-input" />
                Etkinleştir
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="isHome" class="form-check-input" />
                Anasayfada göster
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="isSlider" class="form-check-input" />
                Sliderda göster
            </label>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="ViewBag.Categories">
                <option disabled selected value="">Kategori seçin..</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>


