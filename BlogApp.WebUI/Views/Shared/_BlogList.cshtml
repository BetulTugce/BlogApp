@model IEnumerable<Blog>
@if (Model.Count() == 0)
{
    <div class="alert alert-warning">Kayıt bulunmamaktadır.</div>
}
else
{
    foreach (var item in Model)
    {
        <div class="card text-center mb-2">
            <img src="~/img/@item.Image" class="card-img" alt="...">
            <div class="card-header">
                @item.Title
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Description</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary">Oku</a>
            </div>
        </div>
    }
}

